<head>
  <link rel="stylesheet" href="/assets/conversations.scss">
</head>

<body>
  <div class = "center">
    <div class="text-fields-holder">
      <div>
        <h1>Message <%= @recipient.first_name.capitalize %></h1>
      </div>
      <%= form_tag conversations_path, :method => :post do %>
      <div>
        <%= hidden_field_tag :recipient, @recipient.id %>
      </div>
      <div>
        <%= text_field_tag :subject, nil, value: "Renting Washer",  :class => 'textField' %>
      </div>
      <div>
        <%= text_area_tag :body, nil, placeholder: "Eg. Dates, Location, Pickup?", class: "message-form"%>
      </div>
      <div>
        <%= submit_tag 'Click To Send', class: "button" %>
      <% end %>
      </div>
    </div>
  </div>
</body>
