The washers near you:


<% if @washers.present? %>
  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Washer</th>
        <th>Cost(kg)</th>
        <th>Address</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @washers.each do |washer| %>
        <tr>
          <% if washer.user.avatar.present? %>
            <td>
            <%= image_tag(washer.user.avatar.url(:thumb)) %><br />
            </td>
            <% end %>
          <td><%= washer.user.first_name %> <%= washer.user.last_name %></td>
          <td>$<%= washer.cost %></td>
          <td><%= washer.full_address %></td>
          <td><%=rating_for washer, "experience" %></td>
          <td><%= link_to 'Details', washer %></td>
          <td><%= link_to 'Edit', edit_washer_path(washer) %></td>
          <td><%= link_to 'Destroy', washer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <% else %>
      <p>No nearby washers! Sorry, try a differnent location.</p>
<% end %>

