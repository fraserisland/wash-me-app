  var autocomplete = new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>

<h1 class= "text-secondary">WASH ME</h1>

<body>

<div class="form-row text-secondary" >
  <%= form_tag washers_near_you_path, method: :get do %>
  <%= label :location, "Search anywhere:"%>
  <%= text_field_tag :location, params[:location], class: "form-control" %>

  <%= label :distance, "Distance(kms): " %>
  <%= select_tag :distance , options_for_select([20, 50, 100, 200]), class: 'form-control' %>
  <br>
  <%= submit_tag "Search!", class: "btn btn-outline-secondary" %>
  <% end %>
</div>

</body>
